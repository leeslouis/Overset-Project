deltaT          0.0001;

// writeControl    adjustableRunTime;

writeInterval   3;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

// adjustTimeStep true;

runTimeModifiable true;
libs (forces);
functions
{
    #include "forces"
    #include "forceCoeffs"

    sixDoFRigidBodyState
    {
        patches ("wing");
        type            sixDoFRigidBodyState;
        libs            ("libsixDoFRigidBodyState.so");

        // Optional, only needed if your solver name is different
        motionSolver    sixDoFRigidBodyMotion;

        // Output frequency control
        writeControl    timeStep;
        writeInterval   1;

        // Output formats
        log             yes;
        csv             yes;

        // Output location
        fileName        "postProcessing/sixDoFRigidBodyState";
    }
}
